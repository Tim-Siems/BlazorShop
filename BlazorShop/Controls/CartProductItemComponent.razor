@if(this.Product != null)
{
<tr>    
    <td>
        <NavLink href="@($"Shopping-cart/{Product.Id}")">
        @Product.Name
        </NavLink>
    </td>
    <td>@Product.Brand</td>
    <td>@Product.Price.ToString("c")</td>
    <td>@Product.Quantity</td>
</tr>
}

@code {
    [Parameter]
    public Product Product{ get; set; }
}

